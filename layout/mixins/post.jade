mixin postInfo(item)
    .post-meta
        .post-time
            != full_date(item.date, 'll')
            if item.tags && item.tags.length
                != " | ["
                != list_tags(item.tags, { show_count: false, style: 'none', separator: ', ' })
                != "]"


mixin posts()
    ul.home.post-list
        - page.posts.each(function(item, index) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo( item )
                    .post-content
                        != item.excerpt
                    a.read-more(href=item.path) ... more
        - })

mixin post(item)
    - var type = item.type
       if type == 'tags'
          .tags
            != tagcloud({ min_font: 16, max_font: 35, amount: 999, color: true, start_color: '#42b983', end_color: '#225924', })
       else
          .post
            article.post-block
                h1.post-title
                    != item.title
                +postInfo(item)
                .post-content
                    != item.content
